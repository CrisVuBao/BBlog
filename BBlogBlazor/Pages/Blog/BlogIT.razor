@page "/blog-it"
@using BBlogBlazor.Component

@if (Posts == null)
{
    <LoadingBar></LoadingBar>
}
else
{
    <div class="blog-main container d-flex">
        <div class="blog-list">
            <!--Banner-->
            <div class="banner-tech card bg-dark text-white">
                <img src="/images/banner/bannerTech (72 x 25 inch).png" class="banner-tech-img card-img" alt="Công Nghệ">
                <div class="card-img-overlay">
                    <div class="d-flex">
                        <h2 class="card-title fw-bold">Công Nghệ</h2>
                        <ul class="menu-child d-flex list-unstyled ms-3" style="margin-top: 11px;">
                            <li><a href="blog-list-detail/@GetCateThuThuat.CategoryId" class="menu-child-a text-decoration-none text-white" style="font-size: 18px;">@GetCateThuThuat.CategoryName</a></li>
                            <li><a href="blog-list-detail/@GetCatePhanMemIT.CategoryId" class="text-decoration-none text-white ms-3" style="font-size: 18px;">@GetCatePhanMemIT.CategoryName</a></li>
                            <li><a href="blog-list-detail/@GetCateTinCongNghe.CategoryId" class="text-decoration-none text-white ms-3" style="font-size: 18px;">@GetCateTinCongNghe.CategoryName</a></li>
                        </ul>
                    </div>
                    <div style="margin-top: 150px;">
                        <div class="" style="font-size: 18px;">Cùng Nhau Khám Phá Về Những Điều Mới Của Công Nghệ Hôm Nay</div>
                        <p class="card-text">#bblog</p>
                    </div>
                </div>
            </div>

            <!--Blog List-->
            <div class="blog-list-detail mt-4">
                <!--Danh sách tin tức và bài viết-->
                <div class="list-news">
                    <h5 class="title-news fw-bold">Công Nghệ Hôm Nay</h5>
                    @foreach (var listNews in PostWithCateIT)
                    {
                        <div class="mb-3 mt-3" style="max-width: 100%; height: 150px;">
                            <div class="row g-0">
                                <div class="layout-list-news col-md-4">
                                    <a href="/blog-detail/@listNews.PostId"><img src="@listNews.PicturePostUrl" class="img-list-news img-fluid" alt="..."></a>
                                </div>
                                <div class="col-md-8">
                                    <div class="" style="padding: 0 16px 16px 16px;">
                                        <a href="/blog-detail/@listNews.PostId" class="text-decoration-none"><h5 class="card-title text-black">@listNews.Title</h5></a>
                                        <div class="">@listNews.BriefContent</div>
                                        @*                                         <div class="d-flex">
                                <p class="me-3"><small class="h6" style="color: #6C5F5B;">Tạo Bài Vào: @listNews.CreateDate</small></p>
                                <span class="text-muted">Số lượt xem: @listNews.ViewCount</span>
                                </div> *@
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!--Danh sách tin tức và bài viết end-->
            </div>
        </div>

        <div class="blog-popular position-fixed">
            <div class="news-small">
                <div class="title-news fw-bold" style="font-size: 20px">Top Bài Viết</div>
                @foreach (var watchFlash in GetTopPost)
                {
                    <div class="watch-flash mt-3" style="max-width: 100%; height: 70px;">
                        <div class="d-flex">
                            <div class="index-main">
                                <div class="layout-index-post">
                                    <div class="index-post">@(GetTopPost.IndexOf(watchFlash) + 1)</div>                                  
                                </div>
                            </div>
                            <div class="g-0 ms-2">
                                <div class="layout-title-flash" style="padding: 0 3px 0 0; font-size: 14.5px;">
                                    <a href="blog-detail/@watchFlash.PostId" class="text-decoration-none">
                                        <p class="title-flash text-black">@watchFlash.Title</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- End All Stories-->
}










